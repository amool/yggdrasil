<section class="terms">
{% spaceless %}
{% for delta, item in items %}
  {# create a class variable #}
  {% if loop.index %}
  {% set class %}
   class="{{- cycle(["even", "odd"], delta) }} count-{{ loop.index -}}""
  {% endset %}
  {% endif %}
  {# first thingie #}
  {% if loop.first %}
    {# set tags / tag #}
    {% if loop.length > 1 %} {{ loop.length }} :) 
      {% else %} {{ loop.length }} tag:
    {% endif %}
  <a href="{{ url(item['#href']) }}" {{ class }}>{{ item['#title']}}</a>,

  {# the exception for the 2 loop #}
  {% elseif loop.index == 2 %} {# 2 loop #}
    <strong>
    <a href="{{ url(item['#href']) }}" class="mydesignerisanidiot {{ class }}">{{ item['#title']}}</a>,
  {# heres the last loop #}
  {% elseif loop.last %} {# dot for the last term #}
    <a href="{{ url(item['#href']) }}" class="{{ class }}">{{ item['#title']}}</a>.
  
  {# everything else#}
  {% else %}
    <a href="{{ url(item['#href']) }}" class="{{ class }}">{{ item['#title']}}</a>,
  {% endif %}
{% endfor %}
{# tada go for another round #}

{% endspaceless %}
</section>


